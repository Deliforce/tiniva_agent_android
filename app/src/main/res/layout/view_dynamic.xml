<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/normal_font"
            android:text="Title"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/imvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"
            android:visibility="visible" />
    </LinearLayout>

    <!--</LinearLayout>-->
    <TextView
        android:id="@+id/textViewSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:drawableLeft="@drawable/ic_text"
        android:drawableRight="@drawable/ic_padlock"
        android:drawablePadding="8dp"
        android:fontFamily="@font/normal_font"
        android:padding="8dp"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_13sdp" />

    <RelativeLayout
        android:id="@+id/rlImage"
        android:visibility="gone"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_template_image" />

        <ImageView
            android:id="@+id/imgTemplate"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/placeholder"
            android:layout_toEndOf="@+id/ivIcon" />

        <ImageView
            android:id="@+id/ivImgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_padlock" />
    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/color_bg"
        android:visibility="visible" />

</LinearLayout>