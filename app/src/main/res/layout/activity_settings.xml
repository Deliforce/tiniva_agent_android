<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_vehicle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:text="@string/settings_title_vehicle_type"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/layout_vehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <ImageView
                    android:id="@+id/img_vehicle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_driver_vehicle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_toEndOf="@+id/img_vehicle_type"
                    android:fontFamily="@font/normal_font"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/settings_choose_vehicle_type" />

                <ImageView
                    android:id="@+id/select_vehicle_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/drop_down_gray" />

            </RelativeLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/colorGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/normal_font"
                android:text="@string/settings_title_notification"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/layoutSetRingTone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_ringtone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_ring_ringtone"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tv_setting_ringtone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/normal_font"
                    android:maxLength="25"
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>

            <View
                android:id="@+id/view_four"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/layoutVibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_vibrartion"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_ring_vibration" />

                <TextView
                    android:id="@+id/settings_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/normal_font"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/vibration_alert_long"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/view_five"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_repeat"
                    android:textSize="@dimen/_13sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_ring_repeat" />

                <Switch
                    android:id="@+id/sw_repeat_ring"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/StatusSwitch" />
            </RelativeLayout>

            <View
                android:id="@+id/view_six"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/colorGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="@font/normal_font"
                android:text="@string/settings_title_advanced_settings"
                android:textColor="@color/colorDarkGray"  />

            <View
                android:id="@+id/view_seven"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/lay_select_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/settings_language" />

                <TextView
                    android:id="@+id/tv_selected_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/normal_font"
                    android:text="English"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/view_eight"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/lay_select_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_navigation" />

                <TextView
                    android:id="@+id/tv_navigation_app"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_13sdp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/normal_font"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/view_nine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/lay_map_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_map_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_map_style" />

                <TextView
                    android:id="@+id/tv_style_of_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="Normal"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/view_ten"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/setting_app_version" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="1.2"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_show_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_show_traffic" />

                <Switch
                    android:id="@+id/sw_show_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/StatusSwitch" />
            </RelativeLayout>

            <View
                android:id="@+id/view_eleven"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_power_saving_mode"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_power_saving_mode" />

                <Switch
                    android:id="@+id/sw_power_saving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/StatusSwitch" />
            </RelativeLayout>

            <View
                android:id="@+id/view_twelve"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/layout_nav_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_navigation_helper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/normal_font"
                    android:text="@string/settings_navigation_helper" />

                <Switch
                    android:id="@+id/sw_nav_helper"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/StatusSwitch" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@color/color_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_large"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_settings_clear"
                        style="@style/TextLowerCase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGray"
                        android:fontFamily="@font/normal_font"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:text="@string/settings_action_clear"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_large"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_settings_apply"
                        style="@style/TextLowerCase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDarkGray"
                        android:fontFamily="@font/normal_font"
                        android:text="@string/settings_action_apply"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>
