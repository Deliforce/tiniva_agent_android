<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/small_drwable_calender"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/normal_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_end_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:fontFamily="@font/normal_font"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_buss_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/category_size"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:text="FiledForce"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/tv_cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:drawableStart="@drawable/user_resize"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:text="customer"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:drawableStart="@drawable/ic_currency"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingStart="@dimen/_2sdp"
                android:fontFamily="@font/normal_font"
                android:gravity="center|left"
                android:text="50 $"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_cust_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:drawableStart="@drawable/location_resize"
                android:drawablePadding="@dimen/small_margin"
                android:fontFamily="@font/normal_font"
                android:gravity="center|left"
                android:text="Bangalore ,Karantaka,560037"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_100" />
    </LinearLayout>
</androidx.cardview.widget.CardView>