<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_snackbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkGray"
    android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:layout_gravity="center"
        android:fontFamily="@font/normal_font"
        android:gravity="center_vertical"
        android:text="@string/driver_offline"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/driver_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_driver_duty_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:theme="@style/StatusSwitch" />

        <TextView
            android:id="@+id/tv_duty_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_font"
            android:text="@string/nav_offline"
            android:layout_marginTop="@dimen/lowest_margin"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_caption" />
    </LinearLayout>



</LinearLayout>