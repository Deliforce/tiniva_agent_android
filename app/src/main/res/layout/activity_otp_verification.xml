<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_margin"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal_font"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/large_margin"
            android:text="@string/verify_customer_otp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_otp1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_box"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:hint="0"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/large_margin"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_otp2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_box"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:hint="0"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/large_margin"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_otp3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_box"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:hint="0"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/large_margin"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edt_otp4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_box"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/large_margin"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_otpheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/txt_didnt_get_otp2"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/arial"
                    android:gravity="center"
                    android:text="@string/didn_t_receive_the_otp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_didnt_get_otp2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_didnt_get_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/txt_didnt_get_otp2"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/arial"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/resend_otp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_img_size"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/margin_large"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_otp"
                style="@style/TextLowerCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorDarkGray"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:text="@string/cancel_btn"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_submit_otp"
                style="@style/TextLowerCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/normal_font"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:text="@string/confirm"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>