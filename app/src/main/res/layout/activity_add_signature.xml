<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_bg"
    android:gravity="center"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_large"
        android:layout_weight="7"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">


        <com.app.tiniva.CustomViews.SignatureView.views.SignaturePad
            android:id="@+id/inkV_sign_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/signature_new"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_edit_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_large"
        android:layout_weight="3"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sign_reset"
                style="@style/TextLowerCase"
                android:layout_width="match_parent"
                android:textSize="@dimen/_14sdp"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:text="@string/action_reset"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sign_update"
                style="@style/TextLowerCase"
                android:textSize="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGray"
                android:text="@string/btn_update"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_add_update"
                style="@style/TextLowerCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGray"
                android:text="@string/btn_add"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>